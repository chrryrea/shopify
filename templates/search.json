{
  "sections": {
    "search-header": {
      "type": "search-header",
      "settings": {
        "show_search_box": true,
        "search_placeholder": "Search career advice, resources, and services...",
        "show_search_count": true,
        "color_scheme": "scheme-1",
        "padding_top": 48,
        "padding_bottom": 24
      }
    },
    "search-results": {
      "type": "main-search",
      "settings": {
        "results_per_page": 12,
        "columns_desktop": 3,
        "image_ratio": "square",
        "show_secondary_image": false,
        "show_vendor": false,
        "show_rating": false,
        "show_price": true,
        "enable_filtering": true,
        "filter_type": "horizontal",
        "enable_sorting": true,
        "article_show_date": true,
        "article_show_author": true,
        "article_show_excerpt": true,
        "columns_mobile": "1",
        "padding_top": 24,
        "padding_bottom": 48
      }
    },
    "search-no-results": {
      "type": "search-no-results",
      "settings": {
        "heading": "No results found",
        "subtext": "<p>Try adjusting your search or filter to find what you're looking for.</p>",
        "show_popular_searches": true,
        "show_categories": true,
        "color_scheme": "scheme-2",
        "padding_top": 48,
        "padding_bottom": 48
      }
    },
    "featured-resources": {
      "type": "featured-blog",
      "settings": {
        "blog": "resources",
        "title": "Popular Career Resources",
        "heading_size": "h2",
        "post_limit": 3,
        "show_image": true,
        "show_date": true,
        "show_author": false,
        "show_excerpt": true,
        "columns_desktop": 3,
        "color_scheme": "scheme-1",
        "padding_top": 48,
        "padding_bottom": 64
      }
    },
    "cta-banner": {
      "type": "cta-banner",
      "settings": {
        "heading": "Can't Find What You're Looking For?",
        "text": "Our career coaches are here to help. Book a free consultation to get personalized advice.",
        "button_label": "Book a Free Call",
        "button_link": "/pages/consultation",
        "color_scheme": "accent-1",
        "padding_top": 48,
        "padding_bottom": 64
      }
    }
  },
  "order": [
    "search-header",
    "search-results",
    "search-no-results",
    "featured-resources",
    "cta-banner"
  ]
}
