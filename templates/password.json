{
  "layout": "password",
  "sections": {
    "password-header": {
      "type": "header",
      "settings": {
        "logo_width": 200,
        "color_scheme": "background-1"
      }
    },
    "main": {
      "type": "email-signup-banner",
      "blocks": {
        "logo": {
          "type": "image",
          "settings": {
            "image": "shopify://shop_images/logo.png",
            "image_width": 200,
            "width": "200px"
          }
        },
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "Coming Soon: Transform Your Career Journey",
            "heading_size": "h1"
          }
        },
        "countdown": {
          "type": "countdown",
          "settings": {
            "launch_date": "2024-01-01",
            "show_days": true,
            "show_hours": true,
            "show_minutes": true
          }
        },
        "paragraph": {
          "type": "paragraph",
          "settings": {
            "text": "<p>We're putting the finishing touches on our new career coaching platform. Join our waitlist for exclusive early access and a special launch offer.<\/p>",
            "text_style": "body"
          }
        },
        "email_form": {
          "type": "email_form",
          "settings": {
            "button_label": "Join Waitlist",
            "button_style": "button--primary"
          }
        },
        "social_links": {
          "type": "social_links"
        }
      },
      "block_order": [
        "logo",
        "heading",
        "countdown",
        "paragraph",
        "email_form",
        "social_links"
      ],
      "settings": {
        "image_overlay_opacity": 30,
        "show_background_image": true,
        "image_height": "large",
        "desktop_content_position": "middle-center",
        "show_text_box": true,
        "desktop_content_alignment": "center",
        "color_scheme": "scheme-1",
        "mobile_content_alignment": "center",
        "show_text_below": true,
        "padding_top": 64,
        "padding_bottom": 64
      }
    },
    "password-footer": {
      "type": "footer",
      "settings": {
        "show_social": true,
        "show_policy": true,
        "color_scheme": "background-1",
        "padding_top": 36,
        "padding_bottom": 24
      }
    }
  },
  "order": [
    "password-header",
    "main",
    "password-footer"
  ]
}
