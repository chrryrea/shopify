<section class="career-faq" style="background: white; padding: 5rem 2rem; color: #2d3748;">
  <div class="page-width" style="max-width: 900px; margin: 0 auto;">
    <div class="faq-header" style="text-align: center; margin-bottom: 4rem;">
      <h2 class="h1" style="color: #2d3748; margin-bottom: 1rem; font-size: 2.5rem;">{{ section.settings.title }}</h2>
      <p style="font-size: 1.2rem; color: #4a5568; line-height: 1.7;">{{ section.settings.subtitle }}</p>
    </div>
    
    <div class="faq-list">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'faq_item' %}
            <details class="faq-item" style="background: #f8f5f2; padding: 2rem; border-radius: 12px; margin-bottom: 1.5rem; cursor: pointer; border-left: 4px solid transparent; transition: all 0.3s ease;">
              <summary style="font-weight: 600; font-size: 1.25rem; color: #2d3748; list-style: none; display: flex; justify-content: space-between; align-items: center; cursor: pointer;">
                <span>{{ block.settings.question }}</span>
                <span class="faq-icon" style="color: #667eea; font-size: 1.5rem; transition: transform 0.3s ease;">+</span>
              </summary>
              <div class="faq-answer" style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid rgba(102, 126, 234, 0.2); color: #4a5568; line-height: 1.7; font-size: 1.05rem;">
                {{ block.settings.answer }}
              </div>
            </details>
        {% endcase %}
      {% endfor %}
    </div>
    
    {% if section.settings.show_contact_cta %}
      <div style="text-align: center; margin-top: 4rem; padding: 3rem; background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%); border-radius: 16px;">
        <h3 style="color: #2d3748; font-size: 1.75rem; margin-bottom: 1rem;">{{ section.settings.contact_title }}</h3>
        <p style="color: #4a5568; font-size: 1.1rem; margin-bottom: 2rem;">{{ section.settings.contact_text }}</p>
        <a href="{{ section.settings.contact_link }}" style="background: #667eea; color: white; padding: 1rem 2.5rem; border-radius: 50px; font-weight: 600; font-size: 1rem; text-decoration: none; display: inline-block; box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3); transition: all 0.3s ease;">
          {{ section.settings.contact_button }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .faq-item:hover {
    border-left-color: #667eea;
    background: rgba(102, 126, 234, 0.05);
  }
  
  .faq-item[open] .faq-icon {
    transform: rotate(45deg);
  }
  
  .faq-item summary::-webkit-details-marker {
    display: none;
  }
  
  .faq-item[open] {
    border-left-color: #667eea;
  }
  
  .career-faq a:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 30px rgba(102, 126, 234, 0.4);
  }
</style>

{% schema %}
{
  "name": "Career FAQ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Questions You Might Have"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We understand the concerns and uncertainties that come with career transitions. Here are answers to common questions."
    },
    {
      "type": "checkbox",
      "id": "show_contact_cta",
      "label": "Show Contact CTA",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Contact CTA Title",
      "default": "Still Have Questions?"
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Contact CTA Text",
      "default": "We're here to support you. Schedule a free 15-minute consultation to discuss your unique situation."
    },
    {
      "type": "text",
      "id": "contact_button",
      "label": "Contact Button Text",
      "default": "Book Free Consultation"
    },
    {
      "type": "url",
      "id": "contact_link",
      "label": "Contact Button Link"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "I've been in my role for 10+ years. Is it too late to pivot?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Not at all! Your experience is actually an asset. Our approach helps you leverage your existing skills while making a sustainable transition. 70% of our community members successfully pivot within 12 months, and many report it was the best career decision they ever made.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Career FAQ",
