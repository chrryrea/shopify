<section class="career-benefits" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 5rem 2rem; color: white;">
  <div class="page-width">
    <div class="benefits-header" style="text-align: center; margin-bottom: 4rem;">
      <h2 class="h1" style="color: white; margin-bottom: 1rem; font-size: 2.5rem;">{{ section.settings.title }}</h2>
      <p style="font-size: 1.25rem; color: rgba(255,255,255,0.95); max-width: 700px; margin: 0 auto;">{{ section.settings.subtitle }}</p>
    </div>
    
    <div class="benefits-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2.5rem; max-width: 1200px; margin: 0 auto;">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'benefit' %}
            <div class="benefit-card" style="background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); padding: 2.5rem; border-radius: 16px; border: 1px solid rgba(255,255,255,0.2); transition: all 0.3s ease;">
              <div class="benefit-icon" style="font-size: 3rem; margin-bottom: 1.5rem;">{{ block.settings.icon_emoji }}</div>
              <h3 style="color: white; font-size: 1.5rem; margin-bottom: 1rem; font-weight: 600;">{{ block.settings.title }}</h3>
              <p style="color: rgba(255,255,255,0.9); line-height: 1.7; font-size: 1.05rem;">{{ block.settings.description }}</p>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    
    {% if section.settings.show_cta %}
      <div style="text-align: center; margin-top: 4rem;">
        <a href="{{ section.settings.cta_link }}" class="button" style="background: white; color: #667eea; padding: 1.25rem 3rem; border-radius: 50px; font-weight: 600; font-size: 1.1rem; display: inline-block; text-decoration: none; box-shadow: 0 10px 30px rgba(0,0,0,0.2); transition: all 0.3s ease;">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .benefit-card:hover {
    transform: translateY(-8px);
    background: rgba(255,255,255,0.2);
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }
  
  .button:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
  }
</style>

