<section class="newsletter-signup-section" id="newsletter-signup">
  <div class="container">
    <div class="newsletter-content">
      <div class="newsletter-header text-center">
        <h2>{{ section.settings.title }}</h2>
        <p class="newsletter-subtitle">{{ section.settings.subtitle }}</p>
      </div>
      
      <div class="newsletter-form-container">
        {% form 'customer' %}
          {% if form.posted_successfully? %}
            <div class="newsletter-success">
              <i class="fas fa-check-circle"></i>
              <p>{{ section.settings.success_message | default: 'Thank you for subscribing!' }}</p>
            </div>
          {% else %}
            <div class="newsletter-form">
              <div class="form-group">
                <input type="email" 
                       name="contact[email]" 
                       placeholder="{{ section.settings.email_placeholder | default: 'Enter your email address' }}"
                       class="newsletter-input"
                       required>
                <button type="submit" class="btn-primary newsletter-submit">
                  {{ section.settings.button_text | default: 'Subscribe' }}
                </button>
              </div>
              
              {% if section.settings.show_privacy %}
                <p class="newsletter-privacy">
                  {{ section.settings.privacy_text | default: 'We respect your privacy. Unsubscribe at any time.' }}
                </p>
              {% endif %}
            </div>
          {% endif %}
        {% endform %}
      </div>
      
      {% if section.settings.show_benefits %}
        <div class="newsletter-benefits">
          <h3>{{ section.settings.benefits_title | default: 'What You Get:' }}</h3>
          <ul class="benefits-list">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'benefit' %}
                  <li class="benefit-item">
                    <i class="fas fa-check"></i>
                    <span>{{ block.settings.benefit_text }}</span>
                  </li>
              {% endcase %}
            {% endfor %}
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
.newsletter-signup-section {
  padding: var(--spacing-xxl) 0;
  background: var(--primary);
  color: white;
}

.newsletter-content {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.newsletter-header h2 {
  font-size: 2.5rem;
  margin-bottom: var(--spacing-md);
  color: white;
}

.newsletter-subtitle {
  font-size: 1.25rem;
  margin-bottom: var(--spacing-xl);
  opacity: 0.9;
}

.newsletter-form-container {
  margin-bottom: var(--spacing-xl);
}

.newsletter-success {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  margin: 0 auto;
  max-width: 400px;
}

.newsletter-success i {
  font-size: 1.5rem;
  color: #4ade80;
}

.newsletter-form {
  max-width: 500px;
  margin: 0 auto;
}

.form-group {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.newsletter-input {
  flex: 1;
  padding: 12px 16px;
  border: none;
  border-radius: 6px;
  font-size: 16px;
  background: white;
  color: var(--primary);
}

.newsletter-input:focus {
  outline: 2px solid var(--accent);
  outline-offset: 2px;
}

.newsletter-submit {
  white-space: nowrap;
  padding: 12px 24px;
}

.newsletter-privacy {
  font-size: 0.875rem;
  opacity: 0.8;
  margin: 0;
}

.newsletter-benefits {
  background: rgba(255, 255, 255, 0.1);
  padding: var(--spacing-xl);
  border-radius: 8px;
  text-align: left;
}

.newsletter-benefits h3 {
  font-size: 1.5rem;
  margin-bottom: var(--spacing-lg);
  color: white;
}

.benefits-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

.benefit-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  color: white;
}

.benefit-item i {
  color: var(--accent);
  font-size: 1.125rem;
}

@media (max-width: 768px) {
  .form-group {
    flex-direction: column;
  }
  
  .newsletter-header h2 {
    font-size: 2rem;
  }
  
  .newsletter-benefits {
    text-align: center;
  }
}
</style>

